<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskJava" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FontSizeSmallOne">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="fontFamily">@font/iransans</item>
    </style>

    <style name="FontSizeSmallTwo">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/iransans_mobile_light</item>
        <item name="fontFamily">@font/iransans_mobile_light</item>
    </style>

    <style name="FontSizeMediumOne">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="fontFamily">@font/iransans</item>
    </style>

    <style name="FontSizeMediumTwo">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/iransans_mobile_light</item>
        <item name="fontFamily">@font/iransans_mobile_light</item>
    </style>

    <style name="FontSizeLargeOne">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="fontFamily">@font/iransans</item>
    </style>

    <style name="FontSizeLargeTwo">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/iransans_mobile_light</item>
        <item name="fontFamily">@font/iransans_mobile_light</item>
    </style>

</resources>